@model IEnumerable<Deportivo.Web.Data.Entities.Adicionales>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.adicio_desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adicio_est)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.adicio_desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adicio_est)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_adicio">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_adicio">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_adicio">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
